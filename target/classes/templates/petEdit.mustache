                                </li>
                            {{/nickname}}
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </div>


    {{#pet}}
        <div class="wrapper fadeInDown">
            {{#add}}<h1>Добавление</h1>{{/add}}{{^add}}<h1>Редактирование</h1>{{/add}}
            <form id="formAdd" action="/pet{{#add}}/post{{/add}}" method="post" name="pet">
                {{#id}}<input type="hidden" name="petId" value="{{id}}" >{{/id}}
                <div class="form-group">
                    <label for="name" class="form-label">Имя</label>
                    <input required id="name" type="text" name="name" value="{{#name}}{{name}}{{/name}}">
                </div>

                <div class="form-group">
                    <label for="poroda" class="form-label">Порода</label>
                    <select id="poroda" name="poroda">
                        {{#porodas}}
                            <option {{#poroda}}selected{{/poroda}} value="{{id}}">{{title}}</option>
                        {{/porodas}}
                    </select>
                </div>

                <div class="form-group">
                    <label for="age" class="form-label">Возраст</label>
                    <input required id="age" type="text" name="age" value="{{#age}}{{age}}{{/age}}">
                </div>

                <div class="form-group">
                    <label for="rost" class="form-label">Рост</label>
                    <input required id="rost" type="text" name="rost" value="{{#rost}}{{rost}}{{/rost}}">
                </div>

                <div class="form-group">
                    <label for="ves" class="form-label">Вес</label>
                    <input required id="ves" type="text" name="ves" value="{{#ves}}{{ves}}{{/ves}}">
                </div>

                <div class="form-group">
                    <label for="activity" class="form-label">Активность</label>
                    <select id="activity" name="activity">
                        {{#activities}}
                            <option {{#activity}}selected{{/activity}} value="{{id}}">{{title}}</option>
                        {{/activities}}
                    </select>
                </div>

                <input type="hidden" value="{{_csrf.token}}" name="_csrf">
                <button type="submit" id="saveBtn" ><span>Сохранить</span></button>
            </form>
        </div>
    {{/pet}}

    <video autoplay muted loop id="myVideo">
        <source src="../video/videoBack4.mp4" type="video/mp4">
    </video>

</div>

<script src="../js/jquery-3.4.1.min.js"></script>
<script src="../js/bootstrap.min.js"></script>
<script src="../js/jquery.backstretch.min.js"></script>
</body>

</html>